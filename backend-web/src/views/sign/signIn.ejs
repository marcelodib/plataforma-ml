    <div id="content">
        <!-- NAVBAR -->
        <nav id="border1" class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
            <div class="container-fluid">

                <a href="/" class="navbar-brand"><img src="/images/logo-1.png" style="height: 50%; width: 50%;"></a>

